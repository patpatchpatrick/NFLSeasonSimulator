        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- TextViews -->

    <style name="NormalTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalTextViewDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextBlack</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalTextViewGrey" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextGrey</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalTextViewPurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextPurple</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalScoreTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalScoreTextViewDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalScoreTextViewGrey" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalScoreTextViewPurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextPurple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalHeaderTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
