        <!--Styles to override-->
        <item name="normalButton">@style/NormalButtonGrey</item>
        <item name="normalActivity">@style/NormalActivityGrey</item>
        <item name="normalTextView">@style/NormalTextViewGrey</item>
        <item name="normalScoreTextView">@style/NormalScoreTextViewGrey</item>
        <item name="normalHeaderTextView">@style/NormalHeaderTextViewGrey</item>
        <item name="normalLineDivider">@style/NormalLineDividerGrey</item>
        <item name="vectorPrimaryColor">@color/colorPrimaryGrey</item>
        <item name="preferenceTheme">@style/DefaultPreferenceThemeGrey</item>
    </style>

    <!-- Base application theme purple. -->
    <style name="PurpleAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPurple</item>
        <item name="colorAccent">@color/colorAccentPurple</item>
        <!-- This is the styling for action bar -->
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/NormalTextViewPurple</item>
        <!--To change the background of options menu-->
