        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Activity -->

    <style name="NormalActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalActivityDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryLightBlack</item>
        <item name="android:textColor">@color/colorPrimaryTextBlack</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalActivityGrey" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryLightGrey</item>
        <item name="android:textColor">@color/colorPrimaryTextGrey</item>
