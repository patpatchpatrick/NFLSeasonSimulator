<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- This is the styling for action bar -->
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/NormalTextView</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@color/colorPrimaryLight</item>
        <!--Styles to override-->
        <item name="normalButton">@style/NormalButton</item>
        <item name="normalActivity">@style/NormalActivity</item>
        <item name="normalTextView">@style/NormalTextView</item>
        <item name="normalScoreTextView">@style/NormalScoreTextView</item>
        <item name="normalHeaderTextView">@style/NormalHeaderTextView</item>
        <item name="normalLineDivider">@style/NormalLineDivider</item>
        <item name="vectorPrimaryColor">@color/colorPrimary</item>
        <item name="preferenceTheme">@style/DefaultPreferenceTheme</item>

    </style>

    <!-- Base application theme dark. -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <!-- This is the styling for action bar -->
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/NormalTextViewDark</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@color/colorPrimaryLightBlack</item>
        <!--Styles to override-->
        <item name="normalButton">@style/NormalButtonDark</item>
        <item name="normalActivity">@style/NormalActivityDark</item>
        <item name="normalTextView">@style/NormalTextViewDark</item>
        <item name="normalScoreTextView">@style/NormalScoreTextViewDark</item>
        <item name="normalHeaderTextView">@style/NormalHeaderTextViewDark</item>
        <item name="normalLineDivider">@style/NormalLineDividerDark</item>
        <item name="vectorPrimaryColor">@color/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/DefaultPreferenceThemeDark</item>
    </style>

    <!-- Base application theme grey. -->
    <style name="GreyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGrey</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGrey</item>
        <item name="colorAccent">@color/colorAccentGrey</item>
        <!-- This is the styling for action bar -->
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/NormalTextViewGrey</item>
        <!--To change the background of options menu-->
