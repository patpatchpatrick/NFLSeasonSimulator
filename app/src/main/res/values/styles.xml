    </style>

    <style name="NormalHeaderTextViewDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalHeaderTextViewGrey" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
