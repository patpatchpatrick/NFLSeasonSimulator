        <item name="normalHeaderTextView">@style/NormalHeaderTextViewPurple</item>
        <item name="normalLineDivider">@style/NormalLineDividerPurple</item>
        <item name="vectorPrimaryColor">@color/colorPrimaryPurple</item>
        <item name="preferenceTheme">@style/DefaultPreferenceThemePurple</item>
    </style>


    <!-- Button -->

    <style name="NormalButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>


    <style name="NormalButtonDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDarkBlack</item>
        <item name="android:textColor">@color/colorTextAndIconsBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="NormalButtonGrey" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDarkGrey</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGrey</item>
        <item name="colorAccent">@color/colorAccentGrey</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalButtonPurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDarkPurple</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPurple</item>
