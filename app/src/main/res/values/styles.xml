    <style name="NormalHeaderTextViewPurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryTextPurple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
