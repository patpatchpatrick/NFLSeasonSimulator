    </style>

    <style name="NormalLineDividerPurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDarkPurple</item>
    </style>

    <!-- Override and set preference themes depending on user selected Theme. -->
    <style name="DefaultPreferenceTheme" parent ="AppTheme">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
